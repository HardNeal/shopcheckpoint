<div class="row">
  <div class="col-sm-12">
    <h1><%= t 'posts.index.product_nav' %> <%= link_to (t 'posts.index.product_btn'), new_admin_product_path, class: 'btn btn-success' %></h1>
  </div>
</div>

<hr />

<table class="table table-striped">
  <tr>
    <th><%= t 'posts.index.image' %></th>
    <th><%= t 'posts.index.title' %></th>
    <th><%= t 'posts.index.desc' %></th>
    <th><%= t 'posts.index.price' %></th>
    <th><%= t 'posts.index.category' %></th>
    <th><%= t 'posts.index.action' %></th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td><%= image_tag "/uploads/#{product.id}", size: '100' %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.category.name %></td>
        <td>
          <%= link_to (t 'posts.index.view'), admin_product_path(product) %>
          <%= link_to (t 'posts.index.edit'), edit_admin_product_path(product) %>
          <%= link_to (t 'posts.index.delete'), admin_product_path(product),
                      method: :delete,
                      data: {confirm: 'Do you want to remove this product?'} %>
        </td>
      </tr>
  <% end %>

</table>
