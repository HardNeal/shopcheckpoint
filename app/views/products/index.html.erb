<div class="jumbotron">
  <h1><%= t 'posts.index.welcome' %></h1>
  <p><%= t 'posts.index.wel_msg' %></p>
  <p><a href="#" class="btn btn-primary btn-lg"><%= t 'posts.index.learn' %></a></p>
</div>

<div class="row">

  <div class="col-sm-3">
    <div class="panel panel-default" id="cart">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t 'posts.index.category_nav' %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% Category.all.each do |category| %>
            <li><%= link_to category.name, categories_show_path(category.id) %></a></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="row">
      <div class="col-sm-12 products-pagination">
        <%= will_paginate @products %>
      </div>
    </div>

    <div class="row">
        <% @products.each do |product| %>

        <div class="col-sm-6 product-item">
          <div class="panel panel-default">
            <div class="panel-body">
              <h3><%= product.title %></h3>
              <div class="img" style="background-image: url('<%= image_path product_image(product.id) %>');"></div>
              <h4>$<%= product.price %></h4>
              <p>
                <button class="btn btn-default"><%= link_to (t 'posts.index.view'), products_show_path(product.id) %></button>
                <button class="btn btn-primary"><%= t 'posts.index.cart_add' %></button>
              </p>
            </div>
          </div>
        </div>

        <% end %>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= will_paginate @products %>
      </div>
    </div>
  </div>
  <div class="col-sm-3">
      <div class="panel panel-default" id="cart">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t 'posts.index.cart' %></h3>
        </div>
        <div class="panel-body">
          Your cart is empty
        </div>
      </div>
  </div>
</div>
